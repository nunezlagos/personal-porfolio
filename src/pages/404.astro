---
import BaseLayout from '../layouts/BaseLayout.astro';

const title = 'Página no encontrada';
const description = 'La página que buscas no existe.';
---

<BaseLayout title={title} description={description}>
  <section class="section" style="min-height: 80vh; display: flex; align-items: center; justify-content: center; flex-direction: column;">
    <div class="container text-center">
      <h1 style="color: var(--about-title-color); margin-bottom: 1rem;">404</h1>
      <p class="card-subtitle" style="margin-bottom: 2rem;">Página no encontrada</p>
      <a href="/" class="btn custom-btn-home">Ir al inicio</a>
      <a href="/admin-dashboard" class="btn custom-btn-cv" style="margin-left: 1rem;">Admin</a>
    </div>
  </section>
</BaseLayout>
